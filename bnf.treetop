grammar Bnf
  rule grammar
    productions
  end

  rule productions
    production newline productions / production
  end

  rule production
    token space? produces space? tokens?
  end

  rule tokens
    token space tokens / token
  end

  rule token
    [^ \t\n\r:]+
  end

  rule produces
    ":="
  end

  rule space
    ( " " / "\t" )+
  end

  rule newline
    space? "\n" space?
  end
end
